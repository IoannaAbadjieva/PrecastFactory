<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PrecastFactorySystem</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/styleAdmin.css" asp-append-version="true" />
</head>
<body class="bg-light text-dark">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link link-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Precast Factory</a>
						</li>
						@if (User?.Identity?.IsAuthenticated ?? false)
						{
							<a class="navbar-brand text-dark" asp-area="Admin" asp-controller="Project" asp-action="All">Projects</a>
							<a class="navbar-brand text-dark" asp-area="Admin" asp-controller="Precast" asp-action="All">Precast</a>
							<a class="navbar-brand text-dark" asp-area="Admin" asp-controller="Users" asp-action="All">Users</a>
						}
					</ul>
					<partial name="_AdminPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted ">
		<div class="container">
			&copy; @DateTime.UtcNow.Year - PrecastFactorySystem
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

