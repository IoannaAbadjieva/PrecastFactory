@model IEnumerable<UserInfoViewModel>

@{
	ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr  />

<table class=" table table-striped table-borderless">
	<thead>
		<tr>
			<th></th>
			<th>Full Name</th>
			<th>UserName</th>
			<th>Phone Number</th>
			<th>Role</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.FullName</td>
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>@user.Role</td>
				<td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
				<td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>

			</tr>
		}
	</tbody>
</table>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
