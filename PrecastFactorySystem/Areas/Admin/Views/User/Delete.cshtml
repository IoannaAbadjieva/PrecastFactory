@model UserInfoViewModel

@{
	ViewBag.Title = "Delete User";
}

<div class="card p-4" style="max-width:fit-content">
	<h5 class="card-title">@Model.FullName</h5>

	<p class="card-text"><span class="fw-bold">username: </span>@Model.UserName</p>
	<p class="card-text"><span class="fw-bold">email: </span>@Model.Email</p>
	<p class="card-text"><span class="fw-bold">role: </span>@Model.Role</p>

	<p class="text-danger mt-3">"Are you sure you want to delete this user?"</p>

	<hr />
	<div class="card-footer">
		<form asp-action="DeleteConfirmed" method="post">
			<input type="hidden" asp-for="@Model.Id" />
			<button type="submit" class="btn btn-danger">Confirm Delete</button>
			<a asp-action="All" class="btn btn-secondary">Cancel</a>
		</form>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
