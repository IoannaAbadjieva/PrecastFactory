@model OrderPrecastReinforceViewModel

@{
	ViewBag.Title = "Order precast reinforce";
}

<h4 class="text-center">@ViewBag.Title</h4>

<hr />

<div class="row">
	<div class="col-sm-6 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 ">
		<form asp-controller="Order" asp-action="Order" method="post">
			<div class="mb-3">
				<label asp-for="@Model.OrderedCount" class="form-label-add-edit">Count</label>
				<input asp-for="@Model.OrderedCount" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.OrderedCount" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.DelivererId" class="form-label-add-edit">Select Deliverer</label>
				<select class="bg-dark text-light" asp-for="@Model.DelivererId" class="form-control" aria-required="true">
					<option disabled selected value="">Select Deliverer...</option>
					@foreach (var deliverer in Model.Deliverers)
					{
						<option value="@deliverer.Id">@deliverer.Name</option>
					}
				</select>
				<span asp-validation-for="@Model.DelivererId" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.DeliveryDate" class="form-label-add-edit">Date to deliver</label>
				<input asp-for="@Model.DeliveryDate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd H:mm")" />
				<span asp-validation-for="@Model.DeliveryDate" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label asp-for="@Model.DepartmentId" class="form-label-add-edit">Select Department</label>
				<select class="bg-dark text-light" asp-for="@Model.DepartmentId" class="form-control" aria-required="true">
					<option disabled selected value="">Select Department...</option>
					@foreach (var department in Model.Departments)
					{
						<option value="@department.Id">@department.Name</option>
					}
				</select>
				<span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-secondary mb-2 w-100 p-3 fw-bold" type="submit" value="Order" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
