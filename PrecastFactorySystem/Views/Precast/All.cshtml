@model AllPrecastQueryModel

@{
	ViewBag.Title = "All Precast";
}

<h3 class="text-center">@ViewBag.Title</h3>
<hr />

<form method="get">
	<div class="row justify-content-end align-content-sm-stretch">

		<div class="form-group col-sm-2">
			<div class="form-group">
				<label asp-for="ProjectId">Project</label>
				<select asp-for="ProjectId" class="form-control">
					<option disabled selected value="">...</option>
					@foreach (var project in Model.Projects)
					{
						<option class="bg-dark text-light" value="@project.Id">@project.Name</option>
					}
				</select>
			</div>
		</div>
		<div class="form-group col-sm-2">
			<div class="form-group">
				<label asp-for="PrecastTypeId">Type</label>
				<select asp-for="PrecastTypeId" class="form-control">.

					<option disabled selected value="">...</option>
					@foreach (var type in Model.PrecastTypes)
					{
						<option class="bg-dark text-light" value="@type.Id">@type.Name</option>
					}
				</select>
			</div>
		</div>
		<div class="form-group col-sm-2">
			<label asp-for="SearchTerm"></label>
			<input asp-for="SearchTerm" class="form-control" placeholder="...">
		</div>

		<div class="form-group col-sm-2">
			<div class="form-group">
				<label asp-for="Sorting"></label>
				<select asp-for="Sorting" class="form-control">
					<option disabled selected value="">...</option>
					<option class="bg-dark text-light" value="0">Newest</option>
					<option class ="bg-dark text-light" value="1">By Project</option>
					<option class="bg-dark text-light" value="2">By Type</option>
				</select>
			</div>
		</div>

		<div class="col-sm-2">
			<div class="form-group mt-4 p-2">
				<input type="submit" value="Search" class="btn btn-dark" />
			</div>
		</div>
	</div>
</form>
@{
	var previousPage = Model.CurrentPage - 1;
	if (previousPage < 1)
	{
		previousPage = 1;
	}

	var maxPage = Math.Ceiling((double)Model.TotalPrecast /
		AllPrecastQueryModel.PrecastsPerPage);
}

<div class="row mb-5">
	<div class="col-sm-6 d-grid gap-2 d-sm-flex justify-content-sm-start">
		<a class="btn btn-secondary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
		   asp-controller="Precast"
		   asp-action="All"
		   asp-route-currentPage="@previousPage"
		   asp-route-searchTerm="@Model.SearchTerm"
		   asp-route-sorting="@((int)Model.Sorting)"><<</a>
	</div>

	@{
		var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
		!Model.Projects.Any();
	}

	<div class="col-sm-6 d-grid gap-2 d-sm-flex justify-content-sm-end">
		<a class="btn btn-secondary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
		   asp-controller="Precast"
		   asp-action="All"
		   asp-route-currentPage="@(Model.CurrentPage + 1)"
		   asp-route-searchTerm="@Model.SearchTerm"
		   asp-route-sorting="@((int)Model.Sorting)">>></a>
	</div>
</div>

@if (!Model.Projects.Any())
{
	<h2 class="text-center">No precast found by the given criteria!</h2>
}


<table class="table table-hover table-borderless">
	<thead>
		<tr>
			<th scope="col">Project</th>
			<th scope="col">Type</th>
			<th scope="col">Name</th>
			<th scope="col">Count</th>
			<th scope="col">Reinforced</th>
			<th scope="col">Produced</th>
		</tr>
	</thead>
	<tbody class="table-group-divider">


		@foreach (var p in Model.Precast)
		{
			<tr>
				<td>@p.Project</td>
				<td>@p.PrecastType</td>
				<td>@p.Name</td>
				<td>@p.Count</td>
				<td>@p.Reinforced</td>
				<td>@p.Produced</td>
				<td><a asp-controller="Precast" asp-action="Details" asp-route-id="@p.Id" class="card-link">Details</a></td>
				@if (User?.Identity?.IsAuthenticated ?? false)
				{
					<td><a asp-controller="Precast" asp-action="Delete" asp-route-id="@p.Id" class="card-link">Delete</a></td>
					<td><a asp-controller="Precast" asp-action="Reinforce" asp-route-id="@p.Id" class="card-link">Reinforce</a></td>
					<td><a asp-controller="Precast" asp-action="Production" asp-route-id="@p.Id" class="card-link">By Department</a></td>
				}
			</tr>

		}
	</tbody>
</table>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

