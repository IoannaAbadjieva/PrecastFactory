@model PrecastProductionViewModel

@{
	ViewBag.Title = "Precast production by Departments";

}

<h3 class="text-center">@ViewBag.Title</h3>

<div class="d-flex p-2 justify-content-between">
	<div>
		<p disabled class="mb-0"><span class="fw-bold">Id: </span>@Model.Id</p>
		<p class="mb-0"><span class="fw-bold">Type: </span>@Model.PrecastType</p>
		<p class="mb-0"><span class="fw-bold">Precast: </span>@Model.Name</p>
		<p class="mb-0"><span class="fw-bold">Count: </span>@Model.Count</p>
	</div>
	<div>
		<p class="mb-0"><span class="fw-bold">Project: </span>@Model.Project</p>
		<p class="mb-0"><span class="fw-bold">Reinforced: </span>@Model.Reinforced</p>
		<p class="mb-0"><span class="fw-bold">Produced: </span>@Model.Produced</p>
	</div>
</div>
<div class="text-center mt-4 p-5">
	<a asp-area="" asp-controller="Precast" asp-action="Produce" asp-route-id="@Model.Id" class="btn btn-dark ">Mark as produced</a>
	<a asp-area="" asp-controller="Precast" asp-action="All" class="btn btn-dark ">Back to all precast </a>
</div>

<hr />
<table class="table table-hover table-borderless">
	<thead>
		<tr>
			<th hidden scope="col">Id</th>
			<th hidden scope="col">PrecastId</th>
			<th scope="col">Department</th>
			<th scope="col">Count</th>
			<th scope="col">Date</th>
			<th scope="col">ConcreteAmont m3</th>
		</tr>
	</thead>
	<tbody class="table-group-divider overflow-scroll">

		@foreach (var pd in Model.ByDepartments)
		{
			<tr>
				<td hidden>@pd.Id</td>
				<td hidden>@pd.PrecastId</td>
				<td>@pd.Department</td>
				<td>@pd.Count</td>
				<td>@pd.Date</td>
				<td>@pd.ConcreteAmont</td>
				<td><a asp-controller="Reinforce" asp-action="Edit" asp-route-id="@pd.Id" class="card-link">Edit</a></td>
				<td>
					<a asp-controller="Reinforce" asp-action="Delete" asp-route-id="@pd.Id" class="card-link"
					   onclick="return confirm('Are you sure you want to delete this reinforce?')">Delete</a>
				</td>
			</tr>
		}
	</tbody>

</table>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
