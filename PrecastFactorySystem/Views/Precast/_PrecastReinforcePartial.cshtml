@using System.Security.Claims
@model IEnumerable<ReinforceInfoViewModel>

<table class="table table-hover table-borderless">
	<thead>
		<tr>
			<th disabled scope="col">Id</th>
			<th disabled scope="col">PrecastId</th>
			<th scope="col">Position</th>
			<th scope="col">Count</th>
			<th scope="col">ReinforceType</th>
			<th scope="col">Specific Mass</th>
			<th scope="col">Length</th>
			<th scope="col">Weight</th>
		</tr>
	</thead>
	<tbody class="table-group-divider">

		@foreach (var reinforce in Model)
		{
			<tr>
				<td disabled>@reinforce.Id</td>
				<td disabled>@reinforce.PrecastId</td>
				<td>@reinforce.Position</td>
				<td>@reinforce.Count</td>
				<td>@reinforce.ReinforceType</td>
				<td>@reinforce.SpecificMass</td>
				<td>@reinforce.Length</td>
				<td>@reinforce.Weight</td>
				@if (User.IsAdmin() || User.IsReinforceManager())
				{
					<td>
						<a asp-controller="Reinforce"
						   asp-action="Edit"
						   asp-route-id="@reinforce.Id"
						   class="card-link">Edit</a>
					</td>
					<td>
						<a asp-controller="Reinforce"
						   asp-action="Delete"
						   asp-route-id="@reinforce.Id"
						   asp-route-precastId="@reinforce.PrecastId"
						   onclick="return confirm('Are you sure you want to delete this record?')"
						   class="card-link">
							Delete
						</a>
					</td>
				}
			</tr>
		}
	</tbody>
</table>
}


